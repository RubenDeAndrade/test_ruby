<p id="notice"><%= notice %></p>

<% title = "#{@organization.name}â€™ organization" %>
<h1><%= title %></h1>

<h3>Members</h3>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.firstname %></td>
        <td><%= member.lastname %></td>
        <td><%= link_to 'Show',        organization_member_path(@organization, member) %></td>
        <td><%= link_to 'Edit',   edit_organization_member_path(@organization, member) %></td>
        <td><%= link_to 'Destroy',     organization_member_path(@organization, member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Member for #{title}", new_organization_member_path(@organization) %>
